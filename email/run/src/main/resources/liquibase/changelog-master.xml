<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd"
        logicalFilePath="liquibase">

    <changeSet id="homework-2-create-mailing-request-table" author="Vadim Yarosh">
        <createTable tableName="mailingrequest">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="recipient_email" type="varchar(128)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="response_queue_name" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="homework-2-create-confirmation-mail-table" author="Vadim Yarosh">
        <createTable tableName="confirmationmail">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="varchar(512)">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="varchar(2048)">
                <constraints/>
            </column>
            <column name="recipient_email" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="homework-2-create-email-confirmation-code-table" author="Vadim Yarosh">
        <createTable tableName="emailconfirmationcode">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="email" type="varchar(128)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="confirmation_code" type="varchar(64)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>