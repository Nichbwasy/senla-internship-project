<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd"
        logicalFilePath="liquibase">

    <changeSet id="homework-2-create-mailing-request-table" author="Vadim Yarosh">
        <createTable tableName="mailingrequest">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="recipient_email" type="varchar(128)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="response_queue_name" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="homework-2-create-email-confirmation-code-table" author="Vadim Yarosh">
        <createTable tableName="emailconfirmationcode">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="email" type="varchar(128)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="confirmation_code" type="varchar(64)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="homework-2-create-restore-password-request-table" author="Vadim Yarosh">
        <createTable tableName="restorepasswordrequest">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="login" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="time" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="response_queue_name" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="homework-2-create-restore-password-confirmation-code-table" author="Vadim Yarosh">
        <createTable tableName="restorepasswordconfirmationcode">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="email" type="varchar(128)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="code" type="varchar(64)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="request_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="restore_password_confirmation_code_request_id_fk"
                             referencedTableName="restorepasswordrequest"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>