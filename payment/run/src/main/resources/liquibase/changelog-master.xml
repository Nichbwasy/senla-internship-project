<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd"
        logicalFilePath="liquibase">

    <changeSet id="payment-create-car-rental-receipt-table" author="Vadim Yarosh">
        <createTable tableName="carrentalreceipt">
            <column name="id" type="long">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="requestId" type="long">
                <constraints nullable="false" checkConstraint="requestId > 0"/>
            </column>
            <column name="price" type="decimal">
                <constraints nullable="false" checkConstraint="price >= 0"/>
            </column>
            <column name="payment_time" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog> 
